using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Runtime.Serialization;

namespace EventDiary
{
    [Serializable]
    [DataContract]
    public class Hour
    {
        [DataMember]
        public int Value { get; set; }
        
        [DataMember]
        public List<EventInfo> Events { get; set; } = new List<EventInfo>();

        public Hour() { }

        public Hour(int value)
        {
            Value = value;
        }
    }

    [Serializable]
    [DataContract]
    public class Day
    {
        [DataMember]
        public int Value { get; set; }
        
        [DataMember]
        public List<Hour> Hours { get; set; } = new List<Hour>();

        public Day() 
        {
            for (int i = 0; i < 24; i++)
            {
                Hours.Add(new Hour(i));
            }
        }

        public Day(int value) : this()
        {
            Value = value;
        }
    }

    [Serializable]
    [DataContract]
    public class Month
    {
        [DataMember]
        public int Value { get; set; }
        
        [DataMember]
        public List<Day> Days { get; set; } = new List<Day>();

        public Month() { }

        public Month(int value, int daysInMonth)
        {
            Value = value;
            
            for (int i = 1; i <= daysInMonth; i++)
            {
                Days.Add(new Day(i));
            }
        }
    }

    [Serializable]
    [DataContract]
    public class Year
    {
        [DataMember]
        public int Value { get; set; }
        
        [DataMember]
        public List<Month> Months { get; set; } = new List<Month>();

        public Year() { }

        public Year(int value)
        {
            Value = value;
            InitializeMonths();
        }

        private void InitializeMonths()
        {
            for (int i = 1; i <= 12; i++)
            {
                int daysInMonth = DateTime.DaysInMonth(Value, i);
                Months.Add(new Month(i, daysInMonth));
            }
        }
    }

    [Serializable]
    [DataContract]
    public class Calendar
    {
        [DataMember]
        public List<Year> Years { get; set; } = new List<Year>();

        public Calendar() 
        {
            AddYear(DateTime.Now.Year);
        }

        public void AddYear(int year)
        {
            if (!Years.Exists(y => y.Value == year))
            {
                Years.Add(new Year(year));
            }
        }
    }
    
    [Serializable]
    [DataContract]
    public class EventInfo
    {
        [DataMember]
        public string EventName { get; set; }
        
        [DataMember]
        public DateTime EventDate { get; set; }

        public EventInfo() { }

        public EventInfo(string eventName, DateTime eventDate)
        {
            EventName = eventName;
            EventDate = eventDate;
        }
    }
}